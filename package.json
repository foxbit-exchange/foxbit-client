{
  "name": "foxbit-client",
  "version": "1.0.0",
  "description": "Cliente para a corretora brasileira de FoxBit de criptomoedas",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "compile": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "mocha --require ts-node/register test/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiagoburgo/foxbit-client.git"
  },
  "keywords": [
    "foxbit",
    "api",
    "foxbit-api",
    "cyptocurrency"
  ],
  "author": "Thiago Burgo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thiagoburgo/foxbit-client/issues"
  },
  "homepage": "https://github.com/thiagoburgo/foxbit-client#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.11",
    "@types/ws": "^6.0.1",
    "chai": "^4.2.0",
    "dotenv": "^6.2.0",
    "mocha": "^5.2.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.1",
    "typescript-eslint-parser": "^21.0.1"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "date-fns": "^2.0.0-alpha.26",
    "reconnecting-websocket": "^4.1.10",
    "rxjs": "^6.3.3",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.5.1",
    "ws": "^6.1.2"
  }
}
